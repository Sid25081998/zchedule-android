<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="65dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    >

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/course_title"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/course_type"
        android:layout_marginTop="7dp"
        android:text="RESEARCH METHODS IN MANAGEMENT"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_teacher"
        android:textSize="13dp"
        android:textColor="#939292"
        android:layout_alignTop="@+id/course_attendance"
        android:layout_alignStart="@+id/course_title"
        android:text="ANGELINE GAUTAMI FERNANDO"
        android:layout_marginStart="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_attendance"
        android:textColor="#939292"
        android:textSize="17dp"
        android:textAlignment="textEnd"
        android:layout_below="@+id/course_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_type"
        android:minHeight="40dp"
        android:width="25dp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:background="@drawable/background_type"
        android:textColor="@android:color/white"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="2dp"
        android:textSize="12sp"
        android:layout_marginEnd="7dp"
        android:text="ETH"/>
</RelativeLayout>