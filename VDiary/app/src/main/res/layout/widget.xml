<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/opac_transparent"
    android:paddingEnd="@dimen/widget_margin"
    android:paddingBottom="@dimen/widget_margin"
    android:paddingTop="@dimen/widget_margin"
    android:id="@+id/widget_parent_layout">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/widget_today"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Loading..."
        android:id="@+id/widget_status"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:gravity="center"/>
</RelativeLayout>