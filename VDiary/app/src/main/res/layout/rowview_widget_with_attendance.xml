<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="7dp"
    android:paddingTop="7dp"
    android:id="@+id/widget_layout">
    <TextView
        android:text="ELA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_type"
        android:minHeight="40dp"
        android:width="25dp"
        android:textAlignment="center"
        android:layout_marginStart="7dp"
        android:gravity="center_vertical"
        android:background="@drawable/widget_background_type"
        android:textColor="@android:color/white"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:textSize="12sp"
        android:layout_marginEnd="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/widget_title"
        android:layout_toStartOf="@id/widget_Time"
        android:text="SOFTWARE ENGINEERING AND DISCREETE AND MATHEMATICS FS"
        android:layout_toEndOf="@id/widget_type"
        android:textSize="17sp"
        android:textStyle="normal|bold"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_Time"
        android:textSize="13sp"
        android:text="03:00om"
        android:layout_marginEnd="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_title"
        android:id="@+id/widget_room"
        android:textSize="13sp"
        android:layout_toEndOf="@id/widget_type"
        android:textColor="@android:color/white"
        android:layout_marginStart="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_attendance"
        android:textSize="13sp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white" />
</RelativeLayout>
